void triangle()
{
	std::cout << "enter base\n";
	int base;
	std::cout << "enter the height\n";
	int height;
	std::cin >> base;
	std::cin >> height; 
	std::cout << (base)*(height) * 1/2;
	system("pause");
	system("cls");

}
void rectangle()
{
	std::cout << "enter the base\n";
	int base;
	std::cout << "enter the height\n";
	int height;
	std::cin >> base;
	std::cin >> height;
	std::cout << "The Area is " << (base * height) << '\n';
	system("pause");
	system("cls");
}
void circle()
{
	std::cout << "Enter the Radius\n";
	int r;
	std::cin >> r;
	std::cout << "The Area is " << (3.14 * r) * (3.14 * r) << '\n';
	system("pause");
	system("cls");

}
void end()
{

	std::cout << "\n"; 
	system("pause");
	system("cls");

}
int main()
{
	char choice;
	do
	{
		std::cout << "Enter 1 for area of triangle\n";
		std::cout << "Enter 2 for area of rectangle\n";
		std::cout << "Enter 3 for area of circle\n";
		std::cout << "Enter 4 to exit\n";
		std::cin >> choice;
		switch (choice)
		{
		case'1':

			triangle();
			break;

		case'2':

			rectangle();
			break;
		case'3':

			circle();
			break;
		case'4':
			end();
			break;
		}
		} while (choice != '4');
	}
